<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jolipjo.lovebridge.domain.quiz.dao.QuizMapper">

    <resultMap id="quizListMap" type="com.jolipjo.lovebridge.domain.quiz.dto.QuizListResponseDTO">
        <id property="quizId" column="fk_quiz_id"/>
        <result property="coupleId" column="fk_couple_id"/>
        <result property="quizTitle" column="title"/>
        <result property="quizComplete" column="quiz_complete"/>
    </resultMap>

    <resultMap id="quizDetailMap" type="java.lang.String">
        <result property="quizGetTitle" column="title"/>
    </resultMap>

    <select id="getQuizList" resultMap="quizListMap">
            SELECT
                   a.fk_quiz_id
                 , a.fk_couple_id
                 , b.title
                 , a.quiz_complete
              FROM
                   QUIZ_LIST a
         LEFT JOIN
                   QUIZ b on b.quiz_id = a.fk_quiz_id

    </select>

    <select id="getQuizDetail" resultType="String" parameterType="Long">
        SELECT
               a.title
          FROM
               quiz a
          LEFT JOIN
               quizList b on a.id = b.quizId
          LEFT JOIN
               quizAnswer c on c.list_id = b.id
         WHERE
               a.id = #{ id }
    </select>

    <insert id="registAnswer" parameterType="String" useGeneratedKeys="true" keyProperty="code">
        insert into
        (

        )
        value
        (

        )
    </insert>


</mapper>
