<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jolipjo.lovebridge.domain.member.dao.MemberMapper">
    
    <parameterMap id="MemberEntity" type="com.jolipjo.lovebridge.domain.member.entity.Member">
        <parameter property="email"/>
        <parameter property="nickname"/>
        <parameter property="password"/>
        <parameter property="role"/>
        <parameter property="birth"/>
        <parameter property="gender"/>
    </parameterMap>

<!--    회원가입-->
    <insert id="join" parameterMap="MemberEntity" useGeneratedKeys="true">
        INSERT INTO member
        (
            email,
            nickname,
            password,
            role,
            birth,
            gender
        )
        VALUES
        (
            #{email},
            #{nickname},
            #{password},
            #{role},
            #{birth},
            #{gender}
        )
    </insert>

</mapper>