<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jolipjo.lovebridge.domain.member.dao.MemberMapper">
    
    <parameterMap id="JoinRequestDTO" type="com.jolipjo.lovebridge.domain.member.dto.JoinRequestDTO">
        <parameter property="email"/>
        <parameter property="password"/>
        <parameter property="nickname"/>
        <parameter property="birth"/>
        <parameter property="gender"/>
        <parameter property="marketingAgree"/>
    </parameterMap>

    <insert id="secret" parameterMap="JoinRequestDTO" useGeneratedKeys="true">
        INSERT INTO secret_code
        (
        code
        )
        VALUES
        (
        #{email
        }
        )
    </insert>

</mapper>